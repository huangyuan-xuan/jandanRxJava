<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="newsVo"
            type="com.huangyuanlove.jandanrxjava.model.NewsVO" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{newsVo.title}"
                android:textColor="#333333"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{newsVo.author.name}"
                    android:textColor="#333333"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{newsVo.date}"
                    android:maxLines="1"
                    android:textColor="#333333"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{newsVo.commentCount+`评论`}"
                    android:textColor="#333333"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:layout_width="88dp"
            android:layout_height="68dp"
            app:imageUrl="@{newsVo.customFields.thumbC[0]}"
            app:placeHolder="@{@drawable/image_placeholder}"
            app:errorHolder="@{@drawable/image_placeholder}"
             />

    </LinearLayout>

</layout>